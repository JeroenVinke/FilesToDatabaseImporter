<Application x:Class="FilesToDatabaseImporter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:FilesToDatabaseImporter.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        
        <!-- Converters -->
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"></converters:InverseBooleanToVisibilityConverter>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
        
        
        <!-- Styles -->
        <Style x:Key="GroupControl" TargetType="StackPanel">
            <Setter Property="Margin" Value="0 5 0 0"></Setter>
        </Style>
        <Style x:Key="LabelControl" TargetType="Label">
            <Setter Property="Width" Value="70"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
    </Application.Resources>
</Application>
